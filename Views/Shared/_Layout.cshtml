<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Matt_Portfolio</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="/css/main.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/ad771ba839.js" crossorigin="anonymous"></script>
</head>
<body id="bg-img">

    <section class="showcase">
        <video src="~/video/Cliff.mp4" muted loop autoplay></video>
    </section>

    <header>
        <div class="menu-btn">
            <div class="btn-line"></div>
            <div class="btn-line"></div>
            <div class="btn-line"></div>
        </div>

        <nav class="menu">
            <div class="menu-branding">

                <div class="portrait"></div>

            </div>
            <ul class="menu-nav">
                <li class="nav-items"><a class="nav-links" asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="nav-items"><a class="nav-links" asp-controller="About" asp-action="Index">About Me</a></li>
                <li class="nav-items"><a class="nav-links" asp-controller="Work" asp-action="Index">My Works</a></li>
                <li class="nav-items"><a class="nav-links" asp-controller="Contact" asp-action="Index">Contact Me</a></li>
            </ul>
        </nav>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="empty-space"></div>

    <footer id="main-footer">
        Copyright &copy; 2021
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
